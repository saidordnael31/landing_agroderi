{
  "apps": [
    {
      "name": "agroderi",
      "script": "npm",
      "args": "start",
      "cwd": "/var/www/agroderi",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "/var/log/pm2/agroderi-error.log",
      "out_file": "/var/log/pm2/agroderi-out.log",
      "log_file": "/var/log/pm2/agroderi.log"
    }
  ]
}
